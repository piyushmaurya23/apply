<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-2">

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title,autofocus: true,class: "form-control input-large", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description,class: "form-control input-large", required: true %>
  </div>


  <div class="form-group">
    <%= f.label :place %><br>
    <%= f.text_field :place,class: "form-control input-large", required: true %>
  </div>


  <div class="form-group">
    <%= f.label :event_start_date %><br>
    <%= f.date_select :event_start_date,class: "form-control input-large", required: true %>
  </div>


  <div class="form-group">
    <%= f.label :event_start_time %><br>
    <%= f.time_select :event_start_time,class: "form-control input-large", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :event_end_date %><br>
    <%= f.date_select :event_end_date,class: "form-control input-large", required: true %>
  </div>


  <div class="form-group">
    <%= f.label :event_end_time %><br>
    <%= f.time_select :event_end_time,class: "form-control input-large", required: true %>
  </div>




  <div class="form-group">
      <%= f.submit "Create Event", class: "btn  btn-primary" %>
    </div>
<% end %>
</div>
</div>
</div>
