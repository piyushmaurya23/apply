<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-2">

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-control input-large", required: false, placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control input-large", required: false, placeholder: "Password" %>
  </div>
  
  <div class="checkbox">
    <label>
    <%= f.check_box :remember_me, required: false, as: :boolean if devise_mapping.rememberable? %> Keep me signed in
    </label>
  </div>

  <div class="form-group">
    <%= f.submit "Sign In", class: "btn btn-primary" %>
  </div>
<% end %>

</div>
</div>
</div>

<%= render "devise/shared/links" %>
